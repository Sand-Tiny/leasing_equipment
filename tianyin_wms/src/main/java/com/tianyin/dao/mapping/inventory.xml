<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">  
<mapper namespace="inventory">

    <resultMap type="com.tianyin.domain.Inventory" id="inventory">
        <result column="id"             property="id"/>
        <result column="name"           property="name"/>
        <result column="measure_unit"    property="measureUnit"/>
        <result column="stock"          property="stock"/>
        <result column="price"          property="price"/>
    </resultMap>
    
    <insert id="add" useGeneratedKeys="true" keyProperty="id">
        insert into `inventory` (`name`, `measure_unit`, `stock`, `price`) 
        values (#{name}, #{measureUnit}, #{stock}, #{price})
    </insert>
    
    <insert id="adds">
        insert into `inventory` (`name`, `measure_unit`, `stock`, `price`) 
        values
        <foreach collection="inventories" item="inventory" separator=","> 
        (#{inventory.name}, #{inventory.measureUnit}, #{inventory.stock}, #{inventory.price})
        </foreach>
    </insert>
    
    <update id="update">
        update `inventory`
        <set>
            `name`          = #{name},
            `measure_unit`  = #{measureUnit},
            `stock`         = #{stock},
            `price`         = #{price},
        </set>
        <where>
            id = #{id}
        </where>
    </update>
    
    <select id="getAllInventory" resultMap="inventory">
        select `id`, `name`, `measure_unit`, `stock`, `price`
        from `inventory`
    </select>
    
    <delete id="delete">
        delete from `inventory` where `id` = #{inventoryId}
    </delete>
</mapper>